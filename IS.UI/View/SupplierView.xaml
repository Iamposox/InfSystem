<UserControl x:Class="IS.UI.View.SupplierView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IS.UI.View"
             xmlns:VM="clr-namespace:IS.UI.ViewModel"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="550">
    <UserControl.DataContext>
        <VM:SupplierViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Name" Margin="10,5,0,0"/>
        <TextBox Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,25,0,0" />
        <TextBlock Text="Transport" Margin="100,5,0,0"/>
        <TextBox Width="50" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"  Margin="0,25,50,0"/>
        <TextBlock Text="RawName" Margin="10,0,0,30" VerticalAlignment="Center"/>
        <TextBlock Text="Amount" Margin="0,0,55,30" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,5,0,0"/>
        <TextBlock Text="Transport" Margin="100,5,0,0"/>
        <TextBox Width="50" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5,50,0"/>
        <TextBlock Text="Contact" VerticalAlignment="Bottom" Margin="10,0,0,35"/>
        <TextBox Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,15"/>
        <Button Content="Add supplier's" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,15"/>
        <TextBlock Grid.Column="1" Text="List of suppliers" Margin="10,10,0,0"/>
        <DataGrid Grid.RowSpan="2" AutoGenerateColumns="False" ItemsSource="{Binding Suppliers}" Grid.Column="1" Margin="2,30,-2,0">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.Header>
                        <TextBlock Text="Supplier name"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Expander Header="{Binding Name}">
                                <ListView ItemsSource="{Binding RawMaterials}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Left" Text="Name:"/>
                                                <TextBlock DockPanel.Dock="Left" Text="{Binding Name}"/>
                                                <TextBlock Margin="10 0 0 0" DockPanel.Dock="Left" Text="Amount:"/>
                                                <TextBlock DockPanel.Dock="Left" Text="{Binding Amount}"/>
                                            </DockPanel>
                                        </DataTemplate>    
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Expander>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Contact}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Contacts"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Transport}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Transport"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</UserControl>
