<Window x:Class="IS.UI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IS.UI.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="150"></RowDefinition>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <local:AddUserView Grid.Row="0" VerticalAlignment="Top" Width="300" Height="150"/>
            <local:SupplierView Grid.Row="1"/>
        </Grid>
        <local:NavigationView/>
    </Grid>
</Window>
