<UserControl x:Class="IS.UI.View.RawMaterialsVIew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IS.UI.View"
             xmlns:VM="clr-namespace:IS.UI.ViewModel"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="550">
    <UserControl.DataContext>
        <VM:RawMaterialsViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Search rawmaterials"/>
        <Button Content="Run" Width="50" Height="20" HorizontalAlignment="Right" Command="{Binding FindRaw}"/>
        <TextBox Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Width="200" Height="20" Text="{Binding Find.Name}"/>
        <TextBlock Text="RawMaterials" Grid.Column="0" Grid.Row="1"/>
        <DataGrid Grid.Row="1" Grid.RowSpan="2" Width="300" Margin="0,15,0,0" HorizontalAlignment="Left" Grid.ColumnSpan="2" ItemsSource="{Binding rawMaterials}" Grid.Column="0" AutoGenerateColumns="True" Background="AliceBlue"></DataGrid>
        <TextBlock Grid.Column="1" Text="Add RawMaterials" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <TextBlock Grid.Column="1" Text="Name" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1" Text="Amount" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Width="75" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="{Binding Raw.Name}"/>
        <TextBox Grid.Column="1" Width="50" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Text="{Binding Raw.Amount}"/>
        <Button x:Name="AddRaw" Content="Add" Width="40" Height="20" Grid.Column="1" VerticalAlignment="Bottom" Command="{Binding AddRaw}"/>
    </Grid>
</UserControl>
