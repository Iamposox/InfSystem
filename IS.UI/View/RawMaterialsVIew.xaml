<UserControl x:Class="IS.UI.View.RawMaterialsVIew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IS.UI.View"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:VM="clr-namespace:IS.UI.ViewModel"
             xmlns:Controls="clr-namespace:IS.UI.Control"
             xmlns:Converters="clr-namespace:IS.UI.Converters"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="500" d:DesignWidth="350">
    <UserControl.DataContext>
        <VM:RawMaterialsViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Converter={Converters:RoleToVisibilityConverter},ConverterParameter=1|2|3}" Value="Collapsed">
                                <Setter Property="Height" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                        <Setter Property="Height" Value="*"/>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
            <RowDefinition Height="13"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2">
            <TextBlock Text="Сырьё" Margin="25,0,0,0"/>
            <ScrollViewer Margin="25 25 0 0">
                <ItemsControl ItemsSource="{Binding RawMaterials}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,8,0,0"
                                    BorderBrush="LightGray"
                                    BorderThickness="2" Background="WhiteSmoke">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="50*"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Имя: "/>
                                    <TextBlock Grid.Column="1" Text="{Binding Name}"/>

                                    <TextBlock Grid.Row="1" Text="Сумма: "/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Amount}"/>
                                    <Controls:IconButton 
                                                Command="{Binding Selected}" CommandParameter="Edit"
                                                Visibility="{Binding Converter={Converters:RoleToVisibilityConverter},ConverterParameter=1|2|3}"
                                                Text="Изменить"   Grid.Column="2" Grid.RowSpan="4"
                                                Width="130" VerticalAlignment="Top"
                                                HorizontalAlignment="Right"
                                                Icon="PencilSquareOutline"/>
                                    <Controls:IconButton Command="{Binding Selected}" CommandParameter="Remove"
                                                         Visibility="{Binding Converter={Converters:RoleToVisibilityConverter}, ConverterParameter=1|2|3}"
                                                         Icon="Remove" Grid.Column="3" Grid.ColumnSpan="4" Width="50" VerticalAlignment="Top"
                                                         HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Height="5"
                      VerticalAlignment="Center"   
                      Visibility="{Binding Converter={Converters:RoleToVisibilityConverter},ConverterParameter=1|2|3}"
                      Background="Silver"/>
        <Grid Visibility="{Binding Converter={Converters:RoleToVisibilityConverter}, ConverterParameter=1|2|3}" Grid.Row="0"  Margin="10 5 0 0">
            <UniformGrid Tag="2" 
                             Style="{StaticResource UniformInputFormStyle}" Height="100" VerticalAlignment="Top">
                <DockPanel VerticalAlignment="Top" 
                        LastChildFill="True"
                        Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorLevel=1, AncestorType={x:Type UniformGrid}},Path=ActualWidth}"
                        Style="{StaticResource InputDockingPanelStyle}">
                    <TextBlock Text="Имя :"/>
                    <TextBox 
                            x:Name="RawMaterialName"
                            Text="{Binding EditerRawMaterial.Name}">
                    </TextBox>
                </DockPanel>

                <DockPanel VerticalAlignment="Top"
                        Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorLevel=1, AncestorType={x:Type UniformGrid}},Path=ActualWidth}"
                        Style="{StaticResource InputDockingPanelStyle}">
                    <TextBlock Text="Сумма:"/>
                    <TextBox 
                            x:Name="RawMaterialAmount"
                            Text="{Binding EditerRawMaterial.Amount}"
                            />
                </DockPanel>
            </UniformGrid>
            <Grid VerticalAlignment="Top" Margin="80 110 0 0" Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorLevel=1, AncestorType={x:Type UniformGrid}},Path=ActualWidth}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Controls:IconButton HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Bottom" Command="{Binding AddRaw}" Icon="PlusCircle"  Text="Сохранить изменения">
                    <Controls:IconButton.Style>
                        <Style TargetType="{x:Type Controls:IconButton}" BasedOn="{StaticResource IconButtonStyle}">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=RawMaterialName, Path=Text}" Value="{x:Static sys:String.Empty}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=RawMaterialAmount, Path=Text}" Value="{x:Static sys:String.Empty}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Controls:IconButton.Style>
                </Controls:IconButton>
                <Controls:IconButton  
                    HorizontalAlignment="Center"
                    Command="{Binding CancelCommand,IsAsync=True}"
                    VerticalAlignment="Top"
                    Grid.Row="0"
                    Icon="Refresh" Text="Отменить"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
