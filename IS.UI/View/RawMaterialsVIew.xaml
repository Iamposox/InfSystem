<UserControl x:Class="IS.UI.View.RawMaterialsVIew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IS.UI.View"
             xmlns:VM="clr-namespace:IS.UI.ViewModel"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="350">
    <UserControl.DataContext>
        <VM:RawMaterialsViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition MaxHeight="80"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="350"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="RawMaterials" Margin="5,0,0,0" Grid.Column="0" Grid.Row="1"/>
        <DataGrid Grid.Row="0" MaxWidth="300" Margin="0,15,333,0" HorizontalAlignment="Right" ItemsSource="{Binding rawMaterials}" Grid.Column="0" AutoGenerateColumns="True" Background="AliceBlue"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Add RawMaterials" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Name" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Amount" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,65,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource 20HTextBoxStyle}" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Bottom" Text="{Binding Raw.Name}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource 20HTextBoxStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Text="{Binding Raw.Amount}"/>
        <Button Grid.Row="1" x:Name="AddRaw" Content="Add" Style="{StaticResource ButtonStyle}" Grid.Column="1" VerticalAlignment="Bottom" Command="{Binding AddRaw}"/>
    </Grid>
</UserControl>
